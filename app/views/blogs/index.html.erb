<div class="container">

<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong><%= notice %></strong> 
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div class="row">

<% @blogs.each do | blog| %>
<div class="col-12 col-md-4 my-4">
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= blog.title %></h5>
    <p class="card-text"><%= blog.content.truncate(60) %></p>
    <p class="card-text"> By:  <small>  <%= blog.user.email %> </small></p>

    <%= link_to 'Read More', blog, class:'btn btn-primary' %>
    <br><br>

    <% if current_user.email == blog.user.email  %>
    <%= link_to 'Update', edit_blog_path(blog), class:'btn btn-danger' %> || 
    <%= link_to 'Delete', blog, method: :delete , class:'btn btn-danger' %>
    <% end %>
 
  </div>
</div>
</div>
<% end %>

</div>

</div>